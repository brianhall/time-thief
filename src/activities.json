{
  "version": "0.1",
  "config": {
    "timeNames": {
      "0": "sleep",
      "7": "morning",
      "12": "afternoon",
      "18": "evening",
      "21": "night"
    }
  },
  "activities": [
    {
      "id": "selfie",
      "content": [
        {
          "type": "title",
          "text": "Take a selfie!"
        },
        {
          "type": "input/photo",
          "field": "photo",
          "capture": "user"
        }
      ],
      "entity": {
        "type": "selfie"
      }
    },
    {
      "id": "photo",
      "content": [
        {
          "type": "choice",
          "choices": [
            {
              "type": "title",
              "text": "Take a photo of where you are."
            },
            {
              "type": "title",
              "text": "Take a photo of someone you're with."
            },
            {
              "type": "title",
              "text": "Take a photo of the sky."
            }
          ]
        },
        {
          "type": "input/photo",
          "field": "photo",
          "capture": "environment"
        }
      ],
      "entity": {
        "type": "photo"
      }
    },
    {
      "id": "journal-now",
      "content": [
        {
          "type": "choice",
          "choices": [
            {
              "type": "title",
              "text": "What's going on at this very moment?"
            },
            {
              "type": "title",
              "text": "What's on your mind?"
            },
            {
              "type": "title",
              "text": "How did you get here?"
            },
            {
              "type": "title",
              "text": "How are you feeling?"
            },
            {
              "type": "title",
              "text": "What will you do in the next hour?"
            },
            {
              "type": "title",
              "text": "What are you grateful for?"
            },
            {
              "type": "title",
              "text": "What could be going better?"
            }
          ]
        },
        {
          "type": "input/multi-line",
          "field": "content"
        }
      ],
      "entity": {
        "type": "journal"
      }
    },
    {
      "id": "journal-looking-forward",
      "conditions": {
        "timeOfDay": ["morning"]
      },
      "content": [
        {
          "type": "title",
          "text": "What are you looking forward to today?"
        },
        {
          "type": "input/multi-line",
          "field": "content"
        }
      ],
      "entity": {
        "type": "journal"
      }
    },
    {
      "id": "journal-tonight",
      "conditions": {
        "timeOfDay": ["morning", "afternoon"]
      },
      "content": [
        {
          "type": "title",
          "text": "What are you going to do this evening?"
        },
        {
          "type": "input/multi-line",
          "field": "content"
        }
      ],
      "entity": {
        "type": "journal"
      }
    },
    {
      "id": "journal-tomorrow",
      "conditions": {
        "timeOfDay": ["evening", "night"]
      },
      "content": [
        {
          "type": "title",
          "text": "What would you like to accomplish tomorrow?"
        },
        {
          "type": "input/multi-line",
          "field": "content"
        }
      ],
      "entity": {
        "type": "journal"
      }
    },
    {
      "id": "journal-best-thing",
      "conditions": {
        "timeOfDay": ["afternoon", "evening"]
      },
      "content": [
        {
          "type": "title",
          "text": "What's the best thing that happened so far today?"
        },
        {
          "type": "input/multi-line",
          "field": "content"
        }
      ],
      "entity": {
        "type": "journal"
      }
    },
    {
      "id": "journal-sleep",
      "conditions": {
        "timeOfDay": ["sleep"]
      },
      "content": [
        {
          "type": "title",
          "text": "What's keeping you up?"
        },
        {
          "type": "input/multi-line",
          "field": "content"
        }
      ],
      "entity": {
        "type": "journal"
      }
    },
    {
      "id": "people",
      "content": [
        {
          "type": "steps",
          "steps": [
            [
              {
                "type": "choice",
                "choices": [
                  {
                    "type": "title",
                    "text": "Think of someone you spoke with yesterday."
                  },
                  {
                    "type": "title",
                    "text": "Think of a friend you haven't heard from in a while."
                  },
                  {
                    "type": "title",
                    "text": "Think of a family member."
                  },
                  {
                    "type": "title",
                    "text": "Think of someone you used to work with."
                  },
                  {
                    "type": "title",
                    "text": "Think of someone who inspires you."
                  }
                ]
              },
              {
                "type": "input/entity-lookup",
                "filter": {
                  "type": "person",
                  "field": "name"
                },
                "field": "person"
              }
            ],
            [
              {
                "type": "choice",
                "choices": [
                  {
                    "type": "title",
                    "text": "Reflect on:\n${context.person.name}"
                  }
                ]
              },
              {
                "type": "input/multi-line",
                "field": "content"
              }
            ]
          ]
        }
      ],
      "entity": {
        "type": "journal"
      }
    }
  ]
}
